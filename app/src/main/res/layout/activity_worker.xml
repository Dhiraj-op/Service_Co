<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/half"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Worker">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="96dp"
        android:id="@+id/uploadImage"
        android:src="@drawable/baseline_person_24"
        android:layout_marginTop="50dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/button"/>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anni"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/mai"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:hint="Full Name"
            android:padding="10dp"
            android:inputType="text"
            android:id="@+id/fullname"
            android:drawableStart="@drawable/baseline_phone_iphone_24"
            android:textColorHint="@color/grey"
            android:background="@drawable/edtback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/mai"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:hint="Phone Number"
            android:padding="10dp"
            android:inputType="phone"
            android:id="@+id/contactno"
            android:drawableStart="@drawable/baseline_phone_iphone_24"
            android:textColorHint="@color/grey"
            android:background="@drawable/edtback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Provide"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/mai"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:hint="Eg. Cook, Maid, etc."
            android:padding="10dp"
            android:id="@+id/services"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/baseline_phone_iphone_24"
            android:textColorHint="@color/grey"
            android:background="@drawable/edtback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhar Number"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/mai"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:hint="Aadhar Number"
            android:padding="10dp"
            android:inputType="textCapWords"
            android:drawableStart="@drawable/baseline_phone_iphone_24"
            android:textColorHint="@color/grey"
            android:id="@+id/aadhar"
            android:background="@drawable/edtback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/mai"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:hint="Address"
            android:padding="10dp"
            android:id="@+id/address"
            android:inputType="text"
            android:drawableStart="@drawable/baseline_phone_iphone_24"
            android:textColorHint="@color/grey"
            android:background="@drawable/edtback"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnback"
            android:text="SUBMIT"
            android:textSize="20sp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>




</LinearLayout>