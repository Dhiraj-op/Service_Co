<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash"
    tools:context=".OTP">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">
        <ImageView
            android:layout_marginTop="-60dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/logoaaa"/>

        <ProgressBar
            android:id="@+id/otpProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/orange"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/otp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <EditText

            android:layout_width="45dp"
            android:layout_height="55dp"
            android:maxLength="1"
            android:id="@+id/otpEditText1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:hint="X"
            android:textColorHint="@color/btn"
            android:textSize="20sp"
            android:inputType="number"
            android:background="@drawable/otp_back" />

        <EditText
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:hint="X"
            android:id="@+id/otpEditText2"
            android:textAlignment="center"
            android:maxLength="1"
            android:textSize="20sp"
            android:textColorHint="@color/btn"
            android:inputType="number"
            android:background="@drawable/otp_back" />

        <EditText
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:hint="X"
            android:textSize="20sp"
            android:textColorHint="@color/btn"
            android:textAlignment="center"
            android:id="@+id/otpEditText3"
            android:inputType="number"
            android:layout_marginStart="10dp"
            android:background="@drawable/otp_back" />

        <EditText
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:textSize="20sp"
            android:hint="X"
            android:id="@+id/otpEditText4"
            android:textColorHint="@color/btn"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/otp_back" />

        <EditText
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:textColorHint="@color/btn"
            android:hint="X"
            android:id="@+id/otpEditText5"
            android:inputType="number"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/otp_back" />

        <EditText
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:hint="X"
            android:id="@+id/otpEditText6"
            android:inputType="number"
            android:textColorHint="@color/btn"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/otp_back" />

    </LinearLayout>

    <Button
        android:id="@+id/verifyOTPBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/btnback"
        android:layout_below="@id/ll2"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Verify"
        android:textSize="24sp"
        android:textStyle="bold"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/verifyOTPBtn"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did not receive Code?"
        android:textSize="18sp"
        android:textColor="@color/edt"/>

    <TextView
        android:id="@+id/resendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Resend"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


</LinearLayout>
</RelativeLayout>