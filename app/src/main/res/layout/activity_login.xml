<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="80dp">
       <ImageView
           android:layout_marginTop="-60dp"
           android:layout_width="300dp"
           android:layout_height="200dp"
           android:src="@drawable/logoaaa"/>

        <ProgressBar
            android:id="@+id/phoneProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:layout_above="@+id/text1"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anni"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Phone Number"
            android:textSize="18sp"
            android:id="@+id/text1"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/mai"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:hint="Phone Number"
            android:padding="10dp"
            android:id="@+id/edt"
            android:inputType="phone"
            android:drawableStart="@drawable/baseline_phone_iphone_24"
            android:textColorHint="@color/grey"
            android:background="@drawable/edtback"/>





        <Button
            android:id="@+id/otp_btn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnback"
            android:text="SEND OTP"
            android:textSize="20sp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>





    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/anni"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/ll1"
        android:src="@drawable/ani"
        android:layout_centerHorizontal="true"
        />

